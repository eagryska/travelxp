extends ../shared/template
block content
  h1 Established Country List
  table.table.table-striped
      thead
        tr
          th Name
          th Photos
          th Cities
          th Balance
      tbody
        each country in countries
          tr
            td
              a(href='/country/' + country._id + '/edit')= country.name
            td= country.photos
            td= country.cities
            td= country.balance
  a(href='/country/new')
    button.btn.btn-primary= 'New Country'

